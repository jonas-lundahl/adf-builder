{
  "compilerOptions": {
    "target": "ES2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",

    "pretty": true,
    "removeComments": true,
  },
  "include": ["index.ts", "__generated__/*.ts"]
}
